package com.TaskHunter.project.entity.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.TaskHunter.project.entity.dao.IAppUserDao;
import com.TaskHunter.project.entity.models.Usuario;

@Service
public class UsuarioServiceImpl implements IAppUserService {

	@Autowired
	private IAppUserDao usuarioDao;

	@Override
	public List<Usuario> getAll() {

		return (List<Usuario>) usuarioDao.findAll();
	}

	@Override
	public void insert(Usuario usuario) {

		usuarioDao.save(usuario);

	}

	@Override
	public void delete(long id) {
		usuarioDao.deleteById(id);
	}

	@Override
	public void update(Usuario usuario, long id) {
		if (usuarioDao.findById(id).isPresent()) {
			Usuario existingUsuario = usuarioDao.findById(id).get();

			try {
				if (usuario.getCorreo().length() != 0) {
					existingUsuario.setCorreo(usuario.getCorreo());
				}

			} catch (Exception e) {

			}

			try {
				if (usuario.getPassword().length() != 0) {

					existingUsuario.setPassword(usuario.getPassword());
				}
			} catch (Exception e) {

			}

			try {

				if (usuario.getNombre().length() != 0) {

					existingUsuario.setNombre(usuario.getNombre());
				}
			} catch (Exception e) {

			}

			try {

				if (!usuario.getFoto().equals(null)) {

					existingUsuario.setFoto(usuario.getFoto());
				}
			} catch (Exception e) {

			}

			usuarioDao.save(existingUsuario);

		} else {
			System.out.print("No existe el elemento que se quiere actualizar");
		}

	}

	@Override
	public Object findById(Long id) {

		return usuarioDao.findById(id);
	}

}
