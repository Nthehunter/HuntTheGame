package com.TaskHunter.project.entity.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCrypt;
import org.springframework.stereotype.Service;

import com.TaskHunter.project.entity.models.Usuario;

@Service
public class EncryptServiceImpl implements EncriptService {

	@Autowired
	private com.TaskHunter.project.entity.dao.IUsuarioDao IUsuarioDao;
	
	@Override
	public String encryptPassword(String password) {
		
		return BCrypt.hashpw(password, BCrypt.gensalt());
	}

	@Override
	public boolean verifyPassword(String originalPassword, String hashPassword) {
		
		return BCrypt.checkpw(originalPassword, hashPassword);
	}
	
	public Usuario saveUsuario(Usuario newUser) {
		return this.IUsuarioDao.save(newUser);
	}

}
